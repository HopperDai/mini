page {
  height: 100%;
}

.index-container {
  padding-bottom: 96rpx;
}

.index-container .title {
  font-size: 40rpx;
  font-weight: bold;
  padding: 40rpx;
}

.index-container .texun .list {
  white-space: nowrap;
}

.index-container .texun .list swiper {
  height: 490rpx;
  text-align: center;
}

.index-container .texun .item {
  width: 670rpx;
  height: 480rpx;
  border-radius: 20rpx;
  display: inline-block;
  box-shadow: 0rpx 2rpx 10rpx #ccc;
}

.index-container .texun .poster {
  position: relative;
}

.index-container .texun .poster .texun-name {
  position: absolute;
  top: 0;
  left: 10rpx;
  color: white;
}

.index-container .texun .poster image {
  width: 670rpx;
  height: 358rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.index-container .list .su-info {
  display: flex;
  padding: 30rpx 36rpx;
  justify-content: space-between;
}

.index-container .list .content {
  color: #727272;
  font-size: 28rpx;
}

.index-container .list .rediual {
  color: #ff7d76;
}

.index-container .list .sign {
  background: linear-gradient(to right, #f3a169, #ef8464);
  padding: 2rpx 30rpx 0;
  border-radius: 50rpx;
  margin-top: -14rpx;
  box-shadow: 0 2rpx 4rpx #ee9867;
}

.index-container .list .sign button {
  color: white;
  border: none;
  background: none;
  outline: none;
  padding: 0;
  font-size: 26rpx;
}

/**/

.jingpin .sub-title {
  padding-left: 40rpx;
  font-size: 36rpx;
}

.jingpin .list {
  padding: 20rpx 40rpx;
}

.jingpin .list .item {
  border-radius: 20rpx;
  box-shadow: 0rpx 2rpx 6rpx -2rpx #ccc;
  margin-bottom: 40rpx;
}

.jingpin .list .item image {
  width: 670rpx;
  height: 248rpx;
}

.jingpin .learn-info {
  display: flex;
  padding: 30rpx 36rpx;
  justify-content: space-between;
}

/**/

.mine-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.mine-container .user-info {
  height: 340rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  border-bottom: 20rpx solid #f5f5f5;
}

.mine-container .userinfo-avatar {
  width: 164rpx;
  height: 164rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.mine-container .userinfo-nickname {
  color: #303030;
}

.mine-container .operate {
  padding-left: 34rpx;
}

.mine-container .operate .item {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.mine-container .operate .item image {
  width: 40rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 10rpx;
}

.mine-container .box {
  flex: 1;
  background: #f5f5f5;
}

/**/

.footer {
  width: 100%;
  height: 96rpx;
  border-top: 1rpx solid #b6b6b6;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  background: white;
}

.footer view {
  flex: 1;
  text-align: center;
  line-height: 96rpx;
  color: #606060;
  font-size: 30rpx;
}

.footer view.active {
  color: #fd7742;
}
